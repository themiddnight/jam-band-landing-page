generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feedback {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  
  // Usage purposes (stored as JSON array)
  usagePurposes   Json     // Array of selected purposes + custom text
  
  // Feedback category
  category        FeedbackCategory
  
  // Experience level
  experienceLevel ExperienceLevel
  
  // Rating
  rating          Int      // 1-5 stars
  
  // Message
  message         String?
  
  // Location (auto-detected)
  country         String?
  city            String?
  region          String?
  timezone        String?
  
  // Additional metadata
  userAgent       String?
  ipAddress       String?  // For rate limiting and analytics
  
  @@map("feedback")
}

enum FeedbackCategory {
  BUG_REPORT
  FEATURE_REQUEST
  GENERAL_FEEDBACK
}

enum ExperienceLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}
